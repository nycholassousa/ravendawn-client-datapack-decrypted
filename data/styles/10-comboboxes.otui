  $disabled:
    text-color: #ced2d988

  $hover:
    text-color: #36f991

ExpandingComboBoxPopupMenu < UIPopupMenu
  image-source: /images/ui/misc/dropdown_vic
  image-clip: 0 135 430 45
  image-border: 9

ExpandingComboBox < UIComboBoxExpanding
  font: poppins-semibold-24
