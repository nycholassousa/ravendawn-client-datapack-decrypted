ComboBoxPopupMenuButton < UIWidget
  height: 45
  text-align: left
  text-offset: 4 0
  background-color: alpha
  margin: 1
  font: poppins-semibold-13
  text-color: #ced2d9

  $disabled:
    text-color: #ced2d988

  $hover:
    text-color: #36f991

ComboBoxPopupMenu < UIPopupMenu
  image-source: /images/ui/dropdown/bg_dropdown
  image-border: 3

ComboBox < UIComboBox
  font: poppins-semibold-14
  text-offset: 17 2
  text-align: left
  image-source: /images/ui/dropdown/dropdown
  image-border: 3
  image-border-right: 36
  image-auto-resize: true

ComboBoxPopupScrollMenu < ComboBoxPopupMenu
ComboBoxPopupScrollMenuButton < ComboBoxPopupMenuButton

